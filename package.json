{
  "name": "ztools-site",
  "version": "1.5.1",
  "description": "zTools - Multi-tool utility site with secure, fast, and modern UI",
  "main": "scripts/build.js",
  "bin": {
    "aztomiq": "bin/aztomiq.js"
  },
  "scripts": {
    "aztomiq": "node bin/aztomiq.js",
    "test": "npm run test:integrity && npm run test:locales && npm run test:feature && npm run test:build",
    "test:integrity": "vitest run tests/integrity.test.js",
    "test:locales": "vitest run tests/locales.test.js",
    "test:feature": "vitest run tests/feature",
    "test:build": "vitest run tests/build",
    "test:ui": "node bin/aztomiq.js test ui",
    "test:ui:vi": "node scripts/ui-test.js --lang=vi",
    "test:ui:en": "node scripts/ui-test.js --lang=en",
    "build:dev": "node bin/aztomiq.js build",
    "build:force": "node bin/aztomiq.js build --force",
    "build": "node bin/aztomiq.js build --obfuscate",
    "dev": "node bin/aztomiq.js dev",
    "deploy": "node bin/aztomiq.js deploy"
  },
  "keywords": [
    "tools",
    "utility",
    "calculator",
    "vtools",
    "ztools",
    "ztools.site"
  ],
  "author": "Anph",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^2.2.1",
    "chokidar": "^5.0.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.9",
    "express": "^5.2.1",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.1",
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "clean-css-cli": "^5.0.0",
    "html-minifier-terser": "^7.0.0",
    "javascript-obfuscator": "^4.0.0",
    "jsdom": "^27.3.0",
    "puppeteer": "^24.33.1",
    "terser": "^5.0.0",
    "vitest": "^4.0.16",
    "xml2js": "^0.6.2"
  }
}