<footer class="site-footer">
  <div class="container">
    <div class="footer-grid">
      <!-- Col 1: Brand & About -->
      <div class="footer-col brand-col">
        <a href="<%= rootPath %>" class="footer-logo">
          <img src="<%= rootPath %>assets/images/logo.svg" alt="iZTools" width="32" height="32">
          <span>iZTools</span>
        </a>
        <p class="footer-desc">
          <%= t('footer.about_desc') %>
        </p>
        <div class="footer-social-links">
          <a href="https://github.com/AZTomiq/iZTools.site-public" target="_blank" aria-label="Github"
            class="social-btn">
            <i data-lucide="github"></i>
          </a>
          <a href="mailto:contact@iztools.xyz" aria-label="Email" class="social-btn">
            <i data-lucide="mail"></i>
          </a>
        </div>
      </div>

      <!-- Col 2: Product -->
      <div class="footer-col links-col">
        <h4>Product</h4>
        <ul class="footer-links">
          <li>
            <a href="<%= siteGlobal.site.url %>/<%= locale === 'vi' ? '' : 'en/' %>about/">
              <%= t('footer.intro') %>
            </a>
          </li>
          <li>
            <a href="<%= siteGlobal.site.url %>/<%= locale === 'vi' ? '' : 'en/' %>changelog/">
              <%= t('footer.changelog') || 'Changelog' %>
            </a>
          </li>
          <li>
            <a href="https://github.com/AZTomiq/iZTools.site-public" target="_blank">
              Source Code
            </a>
          </li>
          <li>
            <a href="<%= siteGlobal.site.url %>/roadmap">
              Roadmap
            </a>
          </li>
        </ul>
      </div>

      <!-- Col 3: Legal -->
      <div class="footer-col links-col">
        <h4>Legal</h4>
        <ul class="footer-links">
          <li>
            <a href="<%= siteGlobal.site.url %>/<%= locale === 'vi' ? '' : 'en/' %>privacy/">
              <%= t('footer.policy') %>
            </a>
          </li>
          <li>
            <a href="<%= siteGlobal.site.url %>/<%= locale === 'vi' ? '' : 'en/' %>terms/">
              <%= t('footer.terms') %>
            </a>
          </li>
        </ul>
      </div>

      <!-- Col 4: Feedback (Premium) -->
      <div class="footer-col feedback-col">
        <div class="feedback-widget-premium">
          <div class="widget-header">
            <div class="icon-badge">
              <i data-lucide="message-square-heart"></i>
            </div>
            <div>
              <h4>
                <%= t('footer.feedback.title') %>
              </h4>
              <p class="widget-desc">
                <%= t('footer.feedback.desc') %>
              </p>
            </div>
          </div>

          <form id="feedback-form" action="<%= siteGlobal.site.formspree_url %>" method="POST"
            onsubmit="this.querySelector('input[name=_timestamp]').value = new Date().toISOString()">
            <div class="input-with-icon">
              <i data-lucide="user"></i>
              <input type="text" name="name" placeholder="<%= t('footer.feedback.name') || 'Your Name' %>"
                class="premium-input" required>
            </div>

            <div class="input-with-icon">
              <i data-lucide="mail"></i>
              <input type="email" name="email" placeholder="<%= t('footer.feedback.email') || 'Email (Optional)' %>"
                class="premium-input">
            </div>

            <div class="input-with-icon">
              <i data-lucide="pen-tool" class="textarea-icon"></i>
              <textarea name="message" placeholder="<%= t('footer.feedback.message') %>" required
                class="premium-textarea" rows="2"></textarea>
            </div>

            <input type="hidden" name="topic" value="general" class="feedback-select">

            <!-- Hidden Meta Fields -->
            <input type="hidden" name="_timestamp" value="">
            <input type="hidden" name="_url" value="<%= siteGlobal.site.url %><%= pageUrl ? '/' + pageUrl : '' %>">
            <input type="hidden" name="_locale" value="<%= locale %>">


            <button type="submit" class="btn-premium-submit">
              <span>
                <%= t('footer.feedback.submit') %>
              </span>
              <i data-lucide="sparkles"></i>
            </button>
            <div id="feedback-status" class="feedback-status"></div>
          </form>

          <div class="widget-footer">
            <i data-lucide="quote" class="quote-icon"></i>
            <span>
              <%= t('footer.feedback.slogan') %>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="footer-separator"></div>

    <div class="footer-bottom">
      <div class="copyright-text">
        &copy; <%= new Date().getFullYear() %> AZtomiq. All rights reserved.
      </div>

      <div class="footer-badges">
        <div class="dmca-badge-wrap">
          <a href="//www.dmca.com/Protection/Status.aspx?ID=375b6320-f1c3-4d2d-8b01-1b9195b6c694"
            title="DMCA.com Protection Status" class="dmca-badge">
            <img
              src="https://images.dmca.com/Badges/dmca_protected_sml_120n.png?ID=375b6320-f1c3-4d2d-8b01-1b9195b6c694"
              alt="DMCA.com Protection Status" />
          </a>
          <script src="https://images.dmca.com/Badges/DMCABadgeHelper.min.js"> </script>
        </div>
      </div>

      <div class="powered-by">
        Powered by <a href="https://github.com/AZTomiq/aztomiq" target="_blank">AZtomiq Core</a> v<%= packageVersion
          || '1.5.2' %>
      </div>
    </div>
  </div>
</footer>

<!-- Analytics & Tracking -->
<script src="<%= asset('assets/js/tracker.js') %>" defer></script>