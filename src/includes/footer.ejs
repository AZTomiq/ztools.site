<footer class="site-footer">
  <div class="container footer-inner">
    <div class="footer-col">
      <h3>
        <%= t('footer.about_title') %>
      </h3>
      <p>
        <%= t('footer.about_desc') %>
      </p>
    </div>
    <div class="footer-col">
      <h4>
        <%= t('footer.links_title') %>
      </h4>
      <ul>
        <li><a href="<%= siteGlobal.site.url %>/<%= locale === 'vi' ? '' : 'en/' %>about/">
            <%= t('footer.intro') %>
          </a></li>
        <li><a href="<%= siteGlobal.site.url %>/<%= locale === 'vi' ? '' : 'en/' %>privacy/">
            <%= t('footer.policy') %>
          </a></li>
        <li><a href="<%= siteGlobal.site.url %>/<%= locale === 'vi' ? '' : 'en/' %>terms/">
            <%= t('footer.terms') %>
          </a></li>
        <li><a href="<%= siteGlobal.site.url %>/<%= locale === 'vi' ? '' : 'en/' %>changelog/">
            <%= t('footer.changelog') || 'Version History' %>
          </a></li>
        <li><a href="https://github.com/AZTomiq/ztools.site-public" target="_blank" rel="noopener noreferrer"
            aria-label="View Source on GitHub">
            GitHub Source
          </a></li>
        <li><a href="#feedback-form"
            onclick="const sel = document.querySelector('.feedback-select'); if(sel) { sel.value='new_tool'; sel.dispatchEvent(new Event('change')); } document.querySelector('.feedback-textarea')?.focus();">
            <%= t('footer.feedback.topic_new_tool') %>
          </a></li>
      </ul>
    </div>
    <div class="footer-col feedback-col">
      <div class="feedback-card">
        <div class="feedback-header">
          <div class="feedback-icon-title">
            <i data-lucide="message-square-heart" class="warm-icon"></i>
            <h4>
              <%= t('footer.feedback.title') %>
            </h4>
          </div>
          <p class="feedback-desc">
            <%= t('footer.feedback.desc') %>
          </p>
        </div>

        <form id="feedback-form" action="<%= siteGlobal.site.formspree_url %>" method="POST" class="feedback-form">
          <div class="feedback-row">
            <div class="feedback-input-group">
              <input type="text" name="name" placeholder="<%= t('footer.feedback.name') %>" class="feedback-input">
              <i data-lucide="user" class="input-icon"></i>
            </div>
            <div class="feedback-input-group">
              <input type="email" name="email" placeholder="<%= t('footer.feedback.email') %>" class="feedback-input">
              <i data-lucide="mail" class="input-icon"></i>
            </div>
          </div>

          <div class="feedback-input-group select-wrap">
            <select name="topic" class="feedback-input feedback-select">
              <option value="general">
                <%= t('footer.feedback.topic_general') %>
              </option>
              <option value="new_tool">
                <%= t('footer.feedback.topic_new_tool') %>
              </option>
              <option value="bug">
                <%= t('footer.feedback.topic_bug') %>
              </option>
              <option value="ui">
                <%= t('footer.feedback.topic_ui') %>
              </option>
            </select>
            <i data-lucide="layers" class="input-icon"></i>
          </div>

          <div class="feedback-input-group">
            <textarea name="message" placeholder="<%= t('footer.feedback.message') %>" required
              class="feedback-input feedback-textarea"></textarea>
            <i data-lucide="pen-tool" class="input-icon textarea-icon"></i>
          </div>
          <button type="submit" class="btn-primary feedback-submit-premium">
            <span>
              <%= t('footer.feedback.submit') %>
            </span>
            <i data-lucide="sparkles" style="width: 16px; height: 16px;"></i>
          </button>
          <div id="feedback-status" class="feedback-status"></div>
        </form>

        <p class="feedback-slogan">
          <i data-lucide="quote" style="width: 12px; height: 12px; opacity: 0.5;"></i>
          <span>
            <%= t('footer.feedback.slogan') %>
          </span>
        </p>
      </div>
    </div>
  </div>
  <div class="footer-bottom container">
    <div class="footer-bottom-unified">
      <div class="footer-copyright-wrap">
        <div class="footer-copyright-text">
          &copy; <%= new Date().getFullYear() %> AZtomiq. All rights reserved. Registered in Vietnam.
        </div>
        <div class="footer-dmca-badge">
          <a href="//www.dmca.com/Protection/Status.aspx?ID=375b6320-f1c3-4d2d-8b01-1b9195b6c694"
            title="DMCA.com Protection Status" class="dmca-badge">
            <img
              src="https://images.dmca.com/Badges/dmca_protected_sml_120n.png?ID=375b6320-f1c3-4d2d-8b01-1b9195b6c694"
              alt="DMCA.com Protection Status" />
          </a>
          <script src="https://images.dmca.com/Badges/DMCABadgeHelper.min.js"> </script>
        </div>
      </div>
      <div class="footer-powered-by">
        Powered by <a href="https://github.com/AZTomiq/aztomiq" target="_blank" rel="noopener noreferrer">AZtomiq
          Core</a>
        v<%= packageVersion || '1.5.2' %>
      </div>
    </div>
  </div>
</footer>

<!-- Analytics & Tracking -->
<script src="<%= asset('assets/js/tracker.js') %>" defer></script>