<footer class="site-footer">
  <div class="container footer-inner">
    <div class="footer-col">
      <h3>
        <%= t('footer.about_title') %>
      </h3>
      <p>
        <%= t('footer.about_desc') %>
      </p>
    </div>
    <div class="footer-col">
      <h4>
        <%= t('footer.links_title') %>
      </h4>
      <ul>
        <li><a href="<%= rootPath %><%= locale %>/about/">
            <%= t('footer.intro') %>
          </a></li>
        <li><a href="<%= rootPath %><%= locale %>/privacy/">
            <%= t('footer.policy') %>
          </a></li>
        <li><a href="<%= rootPath %><%= locale %>/terms/">
            <%= t('footer.terms') %>
          </a></li>
        <li><a href="<%= rootPath %><%= locale %>/changelog/">
            <%= t('footer.changelog') || 'Version History' %>
          </a></li>
        <li><a href="https://github.com/ph4n4n/ztools.site-public" target="_blank" rel="noopener noreferrer"
            aria-label="View Source on GitHub">
            GitHub Source
          </a></li>
      </ul>
    </div>
    <div class="footer-copyright">
      <span>
        <%= t('footer.copyright') %>
      </span>
      <span class="footer-powered-by">
        Powered by <a href="https://github.com/ph4n4n/aztomiq" target="_blank" rel="noopener noreferrer">AZtomiq
          Core</a> v<%= packageVersion || '1.2.0' %>
      </span>
    </div>
  </div>
</footer>