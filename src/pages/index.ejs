<section class="hero" style="text-align: center; padding: 3rem 1rem;">
  <h1 style="font-size: 2.5rem; margin-bottom: 1rem;">
    <%= t('home.hero_title') %>
  </h1>
  <p style="font-size: 1.2rem; color: var(--text-muted); max-width: 600px; margin: 0 auto;">
