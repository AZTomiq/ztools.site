<!-- title: <%= t('password.title') %> - ZTools -->
<link rel="stylesheet" href="<%= rootPath %>assets/css/password-generator.css">

<section class="tool-container">
  <div class="page-header">
    <h1>ğŸ” <%= t('password.title') %>
    </h1>
    <p>
      <%= t('password.desc') %>
    </p>
  </div>

  <div class="calculator-card">

    <!-- Output Display -->
    <div class="password-display">
      <textarea id="password-output" readonly placeholder="Your Secure Password(s)" rows="1"></textarea>
      <div class="display-actions">
        <button class="btn-icon" onclick="copyPassword()" title="Copy">ğŸ“‹</button>
        <button class="btn-icon" onclick="generatePassword()" title="Regenerate">ğŸ”„</button>
      </div>
    </div>

    <!-- Strength Meter -->
    <div class="strength-meter">
      <div class="strength-bar" id="strength-bar"></div>
      <span id="strength-text">Strength</span>
    </div>

    <div class="controls-grid">
      <!-- Quantity & Length -->
      <div class="control-box full-width" style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
        <div>
          <label class="control-label">Quantity</label>
          <input type="number" id="quantity" value="1" min="1" max="50" class="form-input">
        </div>
        <div>
          <label class="control-label">Password Length: <span id="length-val">12</span></label>
          <input type="range" id="length" min="4" max="50" value="12" oninput="updateLength(this.value)">
        </div>
      </div>

      <!-- Character Sets -->
      <div class="control-box">
        <h3>Characters</h3>
        <label class="checkbox-container">
          <input type="checkbox" id="uppercase" checked>
          <span>Uppercase (A-Z)</span>
        </label>
        <label class="checkbox-container">
          <input type="checkbox" id="lowercase" checked>
          <span>Lowercase (a-z)</span>
        </label>
        <label class="checkbox-container">
          <input type="checkbox" id="numbers" checked>
          <span>Numbers (0-9)</span>
        </label>
        <label class="checkbox-container">
          <input type="checkbox" id="symbols" checked>
          <span>Symbols (!@#$%)</span>
        </label>
      </div>

      <!-- Advanced Options -->
      <div class="control-box">
        <h3>Options</h3>
        <label class="checkbox-container">
          <input type="checkbox" id="exclude-ambiguous">
          <span>Exclude Ambiguous (l, I, 1, O, 0)</span>
        </label>
        <label class="checkbox-container">
          <input type="checkbox" id="easy-say">
          <span>Easy to Say (Avoid numbers/symbols)</span>
        </label>
      </div>
    </div>

    <button class="btn btn-primary btn-block" onclick="generatePassword()">Generate Password(s)</button>

  </div>

  <div class="info-section">
    <h2>Why use a strong password?</h2>
    <p>Using a unique, random password for every account is the single best thing you can do to protect your digital
      life.</p>
    <p>We generate passwords locally on your device. Nothing is sent to our servers.</p>
  </div>
</section>

<script src="<%= rootPath %>assets/js/password-generator.js"></script>