<!-- title: <%= t('bmi.title') %> - ZTools -->
<link rel="stylesheet" href="<%= rootPath %>assets/css/bmi.css">

<section class="tool-container">
  <div class="page-header">
    <h1>⚖️ <%= t('bmi.title') %>
    </h1>
    <p>
      <%= t('bmi.desc') %>
    </p>
  </div>

  <div class="card tool-card" style="margin-top: 2rem;">
    <form id="bmi-form">
      <div class="form-group">
        <label for="height">Chiều cao (cm)</label>
        <input type="number" id="height" required placeholder="Ví dụ: 170" min="50" max="250">
      </div>

      <div class="form-group">
        <label for="weight">Cân nặng (kg)</label>
        <input type="number" id="weight" required placeholder="Ví dụ: 65" min="20" max="300" step="0.1">
      </div>

      <button type="submit" class="btn" style="width: 100%;">Tính toán ngay</button>
    </form>

    <div id="result-box" class="result-box" style="display: none; margin-top: 2rem;">
      <h2>Kết quả của bạn</h2>
      <p>Chỉ số BMI: <strong id="bmi-value" style="font-size: 1.5rem;">--</strong></p>
      <p>Phân loại: <strong id="bmi-category">--</strong></p>
      <p id="bmi-feedback" style="margin-top: 1rem; font-style: italic;"></p>
    </div>
  </div>

  <div class="card info-card" style="margin-top: 2rem;">
    <h3>Thông tin tham khảo</h3>
    <table style="width: 100%; border-collapse: collapse; margin-top: 1rem;">
      <thead>
        <tr style="background: var(--bg-color); text-align: left;">
          <th style="padding: 0.5rem;">Phân loại</th>
          <th style="padding: 0.5rem;">BMI (kg/m²)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td style="padding: 0.5rem; border-bottom: 1px solid var(--border-color);">Nhẹ cân</td>
          <td style="padding: 0.5rem; border-bottom: 1px solid var(--border-color);">&lt; 18.5</td>
        </tr>
        <tr>
          <td style="padding: 0.5rem; border-bottom: 1px solid var(--border-color);">Bình thường</td>
          <td style="padding: 0.5rem; border-bottom: 1px solid var(--border-color);">18.5 - 22.9</td>
        </tr>
        <tr>
          <td style="padding: 0.5rem; border-bottom: 1px solid var(--border-color);">Thừa cân</td>
          <td style="padding: 0.5rem; border-bottom: 1px solid var(--border-color);">23 - 24.9</td>
        </tr>
        <tr>
          <td style="padding: 0.5rem;">Béo phì</td>
          <td style="padding: 0.5rem;">&ge; 25</td>
        </tr>
      </tbody>
    </table>
  </div>
</section>

<script src="<%= rootPath %>assets/js/bmi.js"></script>

<style>
  .text-warning {
    color: #fd7e14;
  }

  .text-success {
    color: #198754;
  }

  .text-danger {
    color: #dc3545;
  }
</style>