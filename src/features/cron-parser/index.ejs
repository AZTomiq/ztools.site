<div class="cron-parser-wrapper">
  <div class="tool-header">
    <h1>
      <%= t('cronParser.title') %>
    </h1>
    <p>
      <%= t('cronParser.desc') %>
    </p>
  </div>

  <div class="tool-card cron-main-card">
    <div class="input-group">
      <label>
        <%= t('cronParser.input_label') %>
      </label>
      <input type="text" id="cron-input" class="input-form cron-input" placeholder="<%= t('cronParser.placeholder') %>"
        value="*/5 * * * *">
    </div>

    <div id="cron-result-area" class="result-box">
      <div class="result-label">
        <%= t('cronParser.readable_label') %>
      </div>
      <div id="cron-readable" class="result-main"></div>
    </div>

    <div class="examples-section">
      <h3>
        <%= t('cronParser.examples') %>
      </h3>
      <div class="examples-grid">
        <button class="example-btn card" data-cron="* * * * *">
          <div class="example-cron">* * * * *</div>
          <div class="example-desc">
            <%= t('cronParser.every_minute') %>
          </div>
        </button>
        <button class="example-btn card" data-cron="*/5 * * * *">
          <div class="example-cron">*/5 * * * *</div>
          <div class="example-desc">
            <%= t('cronParser.every_5_minutes') %>
          </div>
        </button>
        <button class="example-btn card" data-cron="0 * * * *">
          <div class="example-cron">0 * * * *</div>
          <div class="example-desc">
            <%= t('cronParser.every_hour') %>
          </div>
        </button>
        <button class="example-btn card" data-cron="0 0 * * *">
          <div class="example-cron">0 0 * * *</div>
          <div class="example-desc">
            <%= t('cronParser.every_day_at_midnight') %>
          </div>
        </button>
        <button class="example-btn card" data-cron="0 0 * * 1-5">
          <div class="example-cron">0 0 * * 1-5</div>
          <div class="example-desc">
            <%= t('cronParser.every_weekday') %>
          </div>
        </button>
        <button class="example-btn card" data-cron="0 0 * * 6,0">
          <div class="example-cron">0 0 * * 6,0</div>
          <div class="example-desc">
            <%= t('cronParser.every_weekend') %>
          </div>
        </button>
      </div>
    </div>
  </div>
</div>

<script src="https://unpkg.com/cronstrue@latest/dist/cronstrue-i18n.min.js"></script>
<link rel="stylesheet" href="<%= toolConfig._assets.css %>">
<script src="<%= toolConfig._assets.js %>"></script>