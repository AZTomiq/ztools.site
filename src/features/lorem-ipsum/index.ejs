<!-- title: <%= t('lorem.title') %> - AZtomiq -->
<link rel="stylesheet" href="<%= toolConfig._assets.css %>">

<section class="tool-container">
  <div class="page-header">
    <h1>
      <i data-lucide="<%= toolConfig.icon || 'file-text' %>"></i>
      <%= t('lorem.title') %>

        <% if (typeof toolConfig !=='undefined' && toolConfig.meta && toolConfig.meta.version) { %>
          <button class="version-badge" id="open-changelog" aria-label="View Changelog">v<%= toolConfig.meta.version %>
          </button>
          <% } %>
    </h1>
    <p>
      <%= t('lorem.desc') %>
    </p>
  </div>

  <div class="calculator-card">
    <div class="controls">
      <div class="control-group">
        <label for="count">
          <%= t('lorem.form.count') %>:
        </label>
        <input type="number" id="count" value="5" min="1" max="100">
      </div>

      <div class="control-group">
        <label for="type">
          <%= t('lorem.form.type') %>:
        </label>
        <select id="type">
          <option value="paragraphs">
            <%= t('lorem.form.types.paragraphs') %>
          </option>
          <option value="sentences">
            <%= t('lorem.form.types.sentences') %>
          </option>
          <option value="words">
            <%= t('lorem.form.types.words') %>
          </option>
          <option value="lists">
            <%= t('lorem.form.types.lists') %>
          </option>
        </select>
      </div>

      <div class="control-group checkbox">
        <label>
          <input type="checkbox" id="start-lorem" checked>
          <%= t('lorem.form.start_with') %>
        </label>
      </div>

      <div class="control-group">
        <button class="btn btn-primary" onclick="generateLorem()">
          <%= t('lorem.form.generate') %>
        </button>
      </div>
    </div>

    <div class="output-section">
      <div class="toolbar">
        <div class="view-toggle">
          <button class="view-btn active" onclick="setView('text')" id="btn-text">
            <%= t('lorem.output.text') %>
          </button>
          <button class="view-btn" onclick="setView('html')" id="btn-html">
            <%= t('lorem.output.html') %>
          </button>
        </div>
        <button class="btn btn-sm" onclick="copyLorem()">
          <i data-lucide="clipboard" class="icon-sm"></i>
          <%= t('lorem.output.copy') %>
        </button>
      </div>

      <textarea id="output" readonly></textarea>
    </div>
  </div>

  <section class="info-section">
    <h2>
      <%= t('lorem.info.title') %>
    </h2>
    <p>
      <%= t('lorem.info.text') %>
    </p>
  </section>
</section>

<script src="<%= toolConfig._assets.js %>"></script>