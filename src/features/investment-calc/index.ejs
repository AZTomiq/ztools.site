<!-- title: <%= t('investment.title') %> - ZTools -->
<link rel="stylesheet" href="<%= toolConfig._assets.css %>">

<section class="tool-container">
  <div class="page-header">
    <h1>ðŸ’¸ <%= t('investment.title') %>
        <% if (typeof toolConfig !=='undefined' && toolConfig.meta && toolConfig.meta.version) { %>
          <button class="version-badge" id="open-changelog" aria-label="View Changelog">v<%= toolConfig.meta.version %>
          </button>
          <% } %>
    </h1>
    <p>
      <%= t('investment.desc') %>
    </p>
  </div>

  <div class="card investment-card">
    <div class="form-group">
      <label for="initial-capital">
        <%= t('investment.form.initial') %>
      </label>
      <input type="text" id="initial-capital" placeholder="<%= t('investment.form.initial_ph') %>" inputmode="numeric">
    </div>

    <div class="form-group">
      <label for="final-capital">
        <%= t('investment.form.final') %>
      </label>
      <input type="text" id="final-capital" placeholder="<%= t('investment.form.final_ph') %>" inputmode="numeric">
    </div>

    <div class="form-group">
      <label for="duration">
        <%= t('investment.form.duration') %>
      </label>
      <input type="number" id="duration" value="1" min="0.1" step="0.5">
    </div>

    <button class="btn btn-primary" style="width: 100%; margin-top: 1rem;" onclick="calculateROI()">
      <%= t('investment.form.calculate') %>
    </button>
  </div>

  <div id="result-box" class="result-box-container" style="display: none; margin-top: 2rem;">
    <div class="card result-content">
      <div class="roi-summary">
        <div class="roi-item">
          <label>
            <%= t('investment.results.roi') %>
          </label>
          <div class="roi-value" id="roi-total">0%</div>
        </div>
        <div class="roi-item">
          <label>
            <%= t('investment.results.annualized') %>
          </label>
          <div class="roi-value highlight" id="roi-annual">0%</div>
        </div>
      </div>

      <div class="profit-box" style="margin-top: 1.5rem; padding-top: 1rem; border-top: 1px solid var(--border-color);">
        <div style="display: flex; justify-content: space-between;">
          <span>
            <%= t('investment.results.profit') %>:
          </span>
          <strong id="profit-value">0 Ä‘</strong>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="<%= asset('assets/features/investment-calc/logic.js') %>"></script>
<script src="<%= toolConfig._assets.js %>"></script>