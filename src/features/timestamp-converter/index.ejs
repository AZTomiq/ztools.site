<!-- title: <%= t('timestamp_converter.title') %> - iZTools -->
<link rel="stylesheet" href="<%= toolConfig._assets.css %>">

<section class="tool-container">
  <div class="page-header">
    <h1>‚è≥ <%= t('timestamp_converter.title') %>
        <% if (toolConfig.meta && toolConfig.meta.version) { %>
          <button class="version-badge" id="open-changelog" aria-label="View Changelog">v<%= toolConfig.meta.version %>
              </button>
          <% } %>
    </h1>
    <p>
      <%= t('timestamp_converter.desc') %>
    </p>
  </div>

  <div class="current-time-box card">
    <div class="time-label">
      <%= t('timestamp_converter.current_time') %>
    </div>
    <div class="time-values">
      <div class="time-item">
        <span class="val" id="now-unix">--</span>
        <span class="lbl">
          <%= t('timestamp_converter.labels.seconds') %>
        </span>
      </div>
      <div class="time-item">
        <span class="val" id="now-date">--</span>
        <span class="lbl">GMT+7</span>
      </div>
    </div>
  </div>

  <div class="converter-grid">
    <!-- Unix to Date -->
    <div class="card">
      <h3>
        <%= t('timestamp_converter.unix_to_date') %>
      </h3>
      <div class="form-group" style="margin-top: 1rem;">
        <input type="number" id="unix-input" placeholder="<%= t('timestamp_converter.placeholder') %>">
        <div class="radio-group" style="margin: 0.5rem 0; display: flex; gap: 1rem; font-size: 0.85rem;">
          <label><input type="radio" name="unix-unit" value="s" checked> Sec</label>
          <label><input type="radio" name="unix-unit" value="ms"> Ms</label>
        </div>
        <button class="btn btn-primary" style="width: 100%;" onclick="convertUnixToDate()">
          <%= t('timestamp_converter.labels.convert') %>
        </button>
      </div>
      <div class="results-meta" id="unix-results" style="display: none; margin-top: 1.5rem;">
        <div class="meta-row">
          <span class="meta-label">
            <%= t('timestamp_converter.labels.local_time') %>
          </span>
          <span class="meta-val" id="unix-res-local">--</span>
        </div>
        <div class="meta-row">
          <span class="meta-label">UTC</span>
          <span class="meta-val" id="unix-res-utc">--</span>
        </div>
        <div class="meta-row">
          <span class="meta-label">ISO 8601</span>
          <span class="meta-val" id="unix-res-iso">--</span>
        </div>
      </div>
    </div>

    <!-- Date to Unix -->
    <div class="card">
      <h3>
        <%= t('timestamp_converter.date_to_unix') %>
      </h3>
      <div class="form-group" style="margin-top: 1rem;">
        <input type="datetime-local" id="date-input" step="1">
        <div style="margin: 0.5rem 0; font-size: 0.85rem; color: var(--text-muted);">
          GMT+7 (Local Time)
        </div>
        <button class="btn btn-secondary" style="width: 100%;" onclick="convertDateToUnix()">
          <%= t('timestamp_converter.labels.convert') %>
        </button>
      </div>
      <div class="results-meta" id="date-results" style="display: none; margin-top: 1.5rem;">
        <div class="meta-row">
          <span class="meta-label">
            <%= t('timestamp_converter.labels.seconds') %>
          </span>
          <span class="meta-val" id="date-res-unix">--</span>
        </div>
        <div class="meta-row">
          <span class="meta-label">
            <%= t('timestamp_converter.labels.milliseconds') %>
          </span>
          <span class="meta-val" id="date-res-ms">--</span>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="<%= toolConfig._assets.js %>"></script>