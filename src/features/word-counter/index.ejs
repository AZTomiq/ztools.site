<!-- title: <%= t('word_counter.title') %> - AZtomiq -->
<link rel="stylesheet" href="<%= toolConfig._assets.css %>">

<section class="tool-container">
  <div class="page-header">
    <div style="display: flex; align-items: center; justify-content: center; gap: 0.75rem; margin-bottom: 0.5rem;">
      <h1 style="margin-bottom: 0;"><i data-lucide="bar-chart-2"></i>
        <%= t('word_counter.title') %>
      </h1>
      <% if (typeof toolConfig !=='undefined' && toolConfig.meta && toolConfig.meta.version) { %>
        <button class="version-badge" id="open-changelog" aria-label="View Changelog">v<%= toolConfig.meta.version %>
            </button>
        <% } %>
    </div>
    <p>
      <%= t('word_counter.desc') %>
    </p>
  </div>

  <div class="word-counter-app">
    <!-- Toolbar -->
    <div class="toolbar">
      <div class="tool-group">
        <button class="btn btn-sm" onclick="clearText()">
          <i data-lucide="trash-2" class="icon-sm"></i>
          <%= t('word_counter.toolbar.clear') %>
        </button>
        <button class="btn btn-sm" onclick="copyText()">
          <i data-lucide="clipboard" class="icon-sm"></i>
          <%= t('word_counter.toolbar.copy') %>
        </button>
      </div>
      <div class="tool-group">
        <select id="case-select" onchange="convertCase(this.value)">
          <option value="">
            <%= t('word_counter.toolbar.case_label') %>
          </option>
          <option value="upper">
            <%= t('word_counter.toolbar.cases.upper') %>
          </option>
          <option value="lower">
            <%= t('word_counter.toolbar.cases.lower') %>
          </option>
          <option value="title">
            <%= t('word_counter.toolbar.cases.title') %>
          </option>
          <option value="sentence">
            <%= t('word_counter.toolbar.cases.sentence') %>
          </option>
          <option value="camel">
            <%= t('word_counter.toolbar.cases.camel') %>
          </option>
          <option value="kebab">
            <%= t('word_counter.toolbar.cases.kebab') %>
          </option>
          <option value="snake">
            <%= t('word_counter.toolbar.cases.snake') %>
          </option>
        </select>
        <button class="btn btn-sm" onclick="removeExtraSpaces()">
          <%= t('word_counter.toolbar.remove_spaces') %>
        </button>
      </div>
    </div>

    <!-- Main Editor -->
    <div class="editor-container">
      <textarea id="text-input" placeholder="<%= t('word_counter.analysis.empty_list') %>" autofocus></textarea>
      <div class="floating-stats">
        <span id="stat-words">0 <%= t('word_counter.stats.words') %></span>
        <span class="separator">â€¢</span>
        <span id="stat-chars">0 <%= t('word_counter.stats.chars') %></span>
      </div>
    </div>

    <!-- Detailed Stats Grid -->
    <div class="stats-grid">
      <div class="stat-card primary">
        <div class="stat-value" id="count-words">0</div>
        <div class="stat-label">
          <%= t('word_counter.stats.words') %>
        </div>
      </div>
      <div class="stat-card secondary">
        <div class="stat-value" id="count-chars">0</div>
        <div class="stat-label">
          <%= t('word_counter.stats.chars') %>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-value" id="count-chars-no-space">0</div>
        <div class="stat-label">
          <%= t('word_counter.stats.chars_no_space') %>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-value" id="count-sentences">0</div>
        <div class="stat-label">
          <%= t('word_counter.stats.sentences') %>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-value" id="count-lines">0</div>
        <div class="stat-label">
          <%= t('word_counter.stats.lines') %>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-value" id="count-paragraphs">0</div>
        <div class="stat-label">
          <%= t('word_counter.stats.paragraphs') %>
        </div>
      </div>
      <div class="stat-card info">
        <div class="stat-value" id="reading-time">0s</div>
        <div class="stat-label">
          <%= t('word_counter.stats.reading_time') %>
        </div>
      </div>
      <div class="stat-card info">
        <div class="stat-value" id="speaking-time">0s</div>
        <div class="stat-label">
          <%= t('word_counter.stats.speaking_time') %>
        </div>
      </div>
    </div>

    <!-- Analysis Section -->
    <div class="analysis-section">
      <div class="analysis-col">
        <h3><i data-lucide="pie-chart"></i>
          <%= t('word_counter.analysis.top_keywords') %>
        </h3>
        <ul id="keyword-list" class="keyword-list">
          <li class="empty">
            <%= t('word_counter.analysis.empty_list') %>
          </li>
        </ul>
      </div>
      <div class="analysis-col">
        <h3><i data-lucide="info"></i>
          <%= t('word_counter.analysis.text_details') %>
        </h3>
        <ul class="details-list">
          <li><strong>
              <%= t('word_counter.analysis.longest_word') %>:
            </strong> <span id="detail-longest">-</span></li>
          <li><strong>
              <%= t('word_counter.analysis.shortest_word') %>:
            </strong> <span id="detail-shortest">-</span></li>
          <li><strong>
              <%= t('word_counter.analysis.avg_word') %>:
            </strong> <span id="detail-avg-word">-</span></li>
          <li><strong>
              <%= t('word_counter.analysis.avg_sentence') %>:
            </strong> <span id="detail-avg-sentence">-</span></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- SEO Content -->
  <section class="card" style="padding: 2rem; margin-top: 3rem;">
    <h2><i data-lucide="book-open"></i>
      <%= t('word_counter.guide.title') %>
    </h2>
    <p>
      <%= t('word_counter.guide.intro') %>
    </p>
    <ul>
      <li><strong>
          <%= t('word_counter.guide.features.accurate') %>
        </strong></li>
      <li>
        <%= t('word_counter.guide.features.time') %>
      </li>
      <li>
        <%= t('word_counter.guide.features.keyword') %>
      </li>
      <li>
        <%= t('word_counter.guide.features.convert') %>
      </li>
      <li>
        <%= t('word_counter.guide.features.clean') %>
      </li>
    </ul>
    <h3>
      <%= t('word_counter.guide.why_title') %>
    </h3>
    <ul>
      <li>
        <%= t('word_counter.guide.why.realtime') %>
      </li>
      <li>
        <%= t('word_counter.guide.why.privacy') %>
      </li>
      <li>
        <%= t('word_counter.guide.why.responsive') %>
      </li>
    </ul>
  </section>
</section>

<script src="<%= toolConfig._assets.js %>"></script>