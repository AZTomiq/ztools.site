<!-- title: <%= t('percent.title') %> - ZTools -->

<link rel="stylesheet" href="<%= toolConfig._assets.css %>">

<section class="tool-container">
  <div class="page-header">
    <h1>ðŸ”¢ <%= t('percent.title') %>
    </h1>
    <p>
      <%= t('percent.desc') %>
    </p>
  </div>

  <div class="calculator-card">
    <nav class="tab-nav">
      <button class="tab-btn active" data-tab="basic">
        <%= t('percent.tabs.basic') %>
      </button>
      <button class="tab-btn" data-tab="change">
        <%= t('percent.tabs.change') %>
      </button>
      <button class="tab-btn" data-tab="phrase">
        <%= t('percent.tabs.phrase') %>
      </button>
    </nav>

    <!-- Tab 1: What is X% of Y -->
    <div class="tab-panel active" id="tab-basic">
      <div class="flex-row">
        <span>
          <%= t('percent.basic.what_is') %>
        </span>
        <input type="number" id="basic-percent" placeholder="20" class="input-inline">
        <span>% <%= t('percent.basic.of') %></span>
        <input type="number" id="basic-num" placeholder="500" class="input-inline">
        <button class="btn-calculate-sm" onclick="calcBasic()">
          <%= t('percent.btn_calc') %>
        </button>
      </div>
      <div id="res-basic-box" class="result-box-sm">
        <span>
          <%= t('percent.result_prefix') %>
        </span>
        <strong id="res-basic-val">0</strong>
      </div>
    </div>

    <!-- Tab 2: Percentage Change -->
    <div class="tab-panel" id="tab-change">
      <div class="flex-row">
        <span>
          <%= t('percent.change.from') %>
        </span>
        <input type="number" id="change-from" placeholder="100" class="input-inline">
        <span>
          <%= t('percent.change.to') %>
        </span>
        <input type="number" id="change-to" placeholder="150" class="input-inline">
        <button class="btn-calculate-sm" onclick="calcChange()">
          <%= t('percent.btn_calc') %>
        </button>
      </div>
      <div id="res-change-box" class="result-box-sm">
        <span>
          <%= t('percent.change.label') %>
        </span>
        <strong id="res-change-val">0</strong>
      </div>
    </div>

    <!-- Tab 3: What percentage is X of Y -->
    <div class="tab-panel" id="tab-phrase">
      <div class="flex-row">
        <input type="number" id="phrase-x" placeholder="25" class="input-inline">
        <span>
          <%= t('percent.phrase.is_what_percent_of') %>
        </span>
        <input type="number" id="phrase-y" placeholder="100" class="input-inline">
        <button class="btn-calculate-sm" onclick="calcPhrase()">
          <%= t('percent.btn_calc') %>
        </button>
      </div>
      <div id="res-phrase-box" class="result-box-sm">
        <span>
          <%= t('percent.result_prefix') %>
        </span>
        <strong id="res-phrase-val">0</strong>
      </div>
    </div>
  </div>

  <section class="card" style="padding: 2rem; margin-top: 3rem;">
    <h2>
      <%= t('percent.guide.title') %>
    </h2>
    <div class="guide-grid">
      <div class="guide-item">
        <h4>
          <%= t('percent.guide.p1.title') %>
        </h4>
        <p>
          <%= t('percent.guide.p1.content') %>
        </p>
      </div>
      <div class="guide-item">
        <h4>
          <%= t('percent.guide.p2.title') %>
        </h4>
        <p>
          <%= t('percent.guide.p2.content') %>
        </p>
      </div>
    </div>
  </section>
</section>

<script src="<%= asset('assets/features/percentage-calculator/logic.js') %>"></script>
<script src="<%= toolConfig._assets.js %>"></script>