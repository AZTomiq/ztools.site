<!-- title: <%= t('random_toolkit.title') %> - ZTools -->
<link rel="stylesheet" href="<%= toolConfig._assets.css %>">

<section class="tool-container">
  <div class="page-header">
    <h1>ðŸŽ² <%= t('random_toolkit.title') %>
        <% if (toolConfig.meta && toolConfig.meta.version) { %>
          <span class="version-badge" id="open-changelog">v<%= toolConfig.meta.version %></span>
          <% } %>
    </h1>
    <p>
      <%= t('random_toolkit.desc') %>
    </p>
  </div>

  <nav class="category-tabs">
    <button class="cat-tab active" data-tab="number">
      <%= t('random_toolkit.tabs.number') %>
    </button>
    <button class="cat-tab" data-tab="list">
      <%= t('random_toolkit.tabs.list') %>
    </button>
    <button class="cat-tab" data-tab="dice">
      <%= t('random_toolkit.tabs.dice') %>
    </button>
  </nav>

  <div class="random-card card">
    <!-- Random Number -->
    <div id="tab-number" class="tab-content">
      <div class="form-grid">
        <div class="form-group">
          <label>
            <%= t('random_toolkit.labels.min') %>
          </label>
          <input type="number" id="num-min" value="1">
        </div>
        <div class="form-group">
          <label>
            <%= t('random_toolkit.labels.max') %>
          </label>
          <input type="number" id="num-max" value="100">
        </div>
        <div class="form-group">
          <label>
            <%= t('random_toolkit.labels.count') %>
          </label>
          <input type="number" id="num-count" value="1" min="1" max="100">
        </div>
      </div>
      <button class="btn btn-primary btn-block" onclick="generateRandomNumber()">
        <%= t('random_toolkit.labels.generate') %>
      </button>

      <div class="result-display" id="number-result">--</div>
    </div>

    <!-- List Picker -->
    <div id="tab-list" class="tab-content" style="display: none;">
      <div class="form-group">
        <label>
          <%= t('random_toolkit.labels.items') %>
        </label>
        <textarea id="list-input" placeholder="<%= t('random_toolkit.placeholder_list') %>" rows="8"></textarea>
      </div>
      <button class="btn btn-primary btn-block" onclick="pickFromList()">
        <%= t('random_toolkit.labels.pick') %>
      </button>

      <div class="result-display" id="list-result">--</div>
    </div>

    <!-- Dice -->
    <div id="tab-dice" class="tab-content" style="display: none; text-align: center;">
      <div class="dice-container">
        <div class="dice" id="main-dice">?</div>
      </div>
      <button class="btn btn-primary" onclick="rollDice()" style="margin-top: 2rem;">ðŸŽ² <%=
          t('random_toolkit.labels.generate') %></button>
    </div>
  </div>
</section>

<script src="<%= toolConfig._assets.js %>"></script>