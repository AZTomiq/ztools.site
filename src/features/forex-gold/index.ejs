<!-- title: <%= t('forex_gold.title') %> - ZTools -->
<link rel="stylesheet" href="<%= toolConfig._assets.css %>">

<section class="tool-container">
  <div class="page-header">
    <h1>üìà <%= t('forex_gold.title') %>
        <% if (typeof toolConfig !=='undefined' && toolConfig.meta && toolConfig.meta.version) { %>
          <span class="version-badge" id="open-changelog">v<%= toolConfig.meta.version %></span>
          <% } %>
    </h1>
    <p>
      <%= t('forex_gold.desc') %>
    </p>
  </div>

  <nav class="tab-nav-modern">
    <button class="tab-btn active" data-tab="forex">üíµ <%= t('forex_gold.tabs.forex') %></button>
    <button class="tab-btn" data-tab="gold">ü™ô <%= t('forex_gold.tabs.gold') %></button>
  </nav>

  <!-- Forex Tab -->
  <div class="tab-panel active" id="tab-forex">
    <div class="filter-bar card">
      <div class="search-wrap">
        <span class="search-icon-small">üîç</span>
        <input type="text" id="forex-search" placeholder="<%= t('forex_gold.forex.search') %>">
      </div>
      <div class="base-select-wrap">
        <label>
          <%= t('forex_gold.forex.base_currency') %>
        </label>
        <select id="forex-base" class="select-modern">
          <option value="VND">VND</option>
          <option value="USD">USD</option>
          <option value="EUR">EUR</option>
        </select>
      </div>
    </div>

    <div class="table-responsive card">
      <table class="data-table">
        <thead>
          <tr>
            <th>
              <%= t('forex_gold.forex.headers.code') %>
            </th>
            <th>
              <%= t('forex_gold.forex.headers.name') %>
            </th>
            <th class="text-right">
              <%= t('forex_gold.forex.headers.buy') %>
            </th>
            <th class="text-right">
              <%= t('forex_gold.forex.headers.sell') %>
            </th>
          </tr>
        </thead>
        <tbody id="forex-table-body">
          <tr>
            <td colspan="4" class="text-center loading-state">
              <%= t('forex_gold.messages.loading') %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Gold Tab -->
  <div class="tab-panel" id="tab-gold">
    <div class="update-info">
      <span>
        <%= t('forex_gold.gold.last_updated') %>: <strong id="gold-time">--</strong>
      </span>
    </div>

    <div class="gold-showcase" id="gold-showcase">
      <!-- Top highlight cards -->
    </div>

    <div class="table-responsive card">
      <table class="data-table">
        <thead>
          <tr>
            <th>
              <%= t('forex_gold.gold.headers.type') %>
            </th>
            <th class="text-right">
              <%= t('forex_gold.gold.headers.buy') %>
            </th>
            <th class="text-right">
              <%= t('forex_gold.gold.headers.sell') %>
            </th>
          </tr>
        </thead>
        <tbody id="gold-table-body">
          <tr>
            <td colspan="3" class="text-center loading-state">
              <%= t('forex_gold.messages.loading') %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</section>

<script id="forex-names" type="application/json">
  <%- JSON.stringify(t('forex_gold.currency_names')) %>
</script>

<script src="<%= toolConfig._assets.js %>"></script>