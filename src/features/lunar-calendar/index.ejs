      <p style="margin-top: 1rem; color: var(--text-muted); line-height: 1.6;">
        <%= t('lunarCalendar.info.description') %>
      </p>
      <p style="margin-top: 1rem; color: var(--text-muted); line-height: 1.6;">
        <%= t('lunarCalendar.info.canChiInfo') %>
      </p>
    </div>
  </div>
</section>

