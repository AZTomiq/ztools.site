            </div>
          </div>

          <div class="zodiac-summary">
            <h4 class="zodiac-summary-title">
              <i data-lucide="sun" style="width: 14px; height: 14px;"></i>
              <%= t('lunarCalendar.goodHours.title') %>
            </h4>
            <div id="zodiac-hours-summary" class="zodiac-hours-list">
              <!-- Populated by JS -->
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Month View Section -->
    <div class="card tool-card" style="margin-top: 2rem;">
